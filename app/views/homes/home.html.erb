
<div class="container">
	<h1>welcome home</h1>
	<div class="row">
		<% @post.each do |post|%>
		
			<div class="col-md-4 mb-3 ">
				
				<div class="card">
					<div class="card-body p-2">
						<%= image_tag post.image, class: 'img-fluid'%>
						<%= link_to post_path(post) do %>
						<h3><%= post.title %></h3>
						<%end%>
						<p><%= post.description%></p>
						<small><%= post.category.name %></small>
					</div>
				</div>
				
			</div>
		
		<%end%>
	</div>
</div>

