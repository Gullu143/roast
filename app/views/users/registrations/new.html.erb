<div class="container py-4">
  <div class="col-md-5 mx-auto">
    <div class="card">
      <div class="card-body">
        <h2 class="text-center">Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, class: 'mb-0' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :email, class: 'mb-0 mt-2' %>
    <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
  </div>

   <div class="field">
    <%= f.label :image, class: 'mb-0 mt-2' %>
    <%= f.file_field :image, class: 'form-control' %>
   </div>
    <div class="field">
    <%= f.label :phone, class: 'mb-0 mt-2' %>
    <%= f.number_field :phone, class: 'form-control' %>
   </div>

  <div class="field">
    <%= f.label :password, class: 'mb-0 mt-2' %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: 'mb-0 mt-2' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-primary btn-block mt-3  ' %>
  </div>
<% end %>
<hr>
<center> <%= render "users/shared/links" %></center>
      </div>
    </div>
  </div>
</div>



